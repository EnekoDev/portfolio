---
import CustomButton from "../components/CustomButton.astro"

const date = new Date()
const year = date.getFullYear()
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Eneko Olabarria</title>
	</head>
	<body>
		<header class="site-head">
			<nav class="nav-bar">
				<a href="/">Eneko</a>
				<a href="/blog/">Blog</a>
			</nav>
			<div class="site-title">
				<h1>Eneko Olabarria</h1>
				<h2>Full Stack Web Dev</h2>
			</div>
		</header>
		<slot />
		<footer class="footer">
			<div class="footer-copyright">
				<h5>&copy;{year} EnekoDev. Casi todos los derechos reservados.</h5>
				<h6>Visita el c√≥digo de este proyecto</h6>
				<CustomButton title='Repositorio' icon='/img/git.svg' iconAlt='Git logo' url='https://github.com/EnekoDev/portfolio'/>
			</div>
			<div class="footer-contact">
				<CustomButton title='Contacto' icon='/img/mail.svg' iconAlt='linkedin-logo' url='mailto:enekolabdev@gmail.com' />
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--font-color: #FFF;
		--page-background-1: #61629E;
		--page-background-2: #9E9D61;
		--content-background: #ADADAD;
	}
	html {
		margin: 0;
		padding: 0;
		font-family: monospace, Arial, Helvetica, sans-serif;
		background: linear-gradient(var(--page-background-1), var(--page-background-2));
		color: var(--font-color);
	}
	body {
		margin: 2vh 30vw 2vh 30vw;
		min-height: 100vh;
	}
</style>

<style>
	.nav-bar {
		/* border */
		border: 2px solid #ffd700;
		border-radius: 12px;
		background-color: var(--content-background);
		/* content */
		display: flex;
		gap: 25px;
		font-size: medium;
		font-weight: 700;
		/* padding, margin */
		padding: 0.5vh 2vw;
		width: fit-content;
		height: fit-content;

		/* links */
		a, a:visited {
        	color: var(--font-color);
		text-decoration: none;
		}
		a:hover, a:active, a:focus {
			color: gold;
		}
	}

	.footer {
		/* margin, border */
		margin: 1vh 0vw 3vh 0vw;
		/* flexbox*/
		display: flex;
		justify-content: space-between;
		align-items: end;
	}

</style>